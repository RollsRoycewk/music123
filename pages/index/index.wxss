/* pages/index/index.wxss */
.indexContainer .navSwiper .navItem image{
  width:100%;
  height:100%;
}

.indexContainer .headerNav{
  display:flex;
}

.indexContainer .headerNav .headerItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width:20%;
}

.indexContainer .headerNav .headerItem .iconfont{
  width:100rpx;
  height:100rpx;
  background-color: rgb(240, 19, 19);
  border-radius: 50%;
  color:white;
  text-align: center;
  line-height:100rpx;
  font-size:48rpx;
  margin:20rpx 0;
}

.indexContainer .headerNav .headerItem text{
  font-size:28rpx;
}

.recommendContainer{
  padding:40rpx 20rpx;
}


.recommendContainer .recommendScroll{
  display: flex;
  padding-top:20rpx;
  height:340rpx;
  /* height:20rpx; */
}

.recommendContainer .recommendScroll .scrollItem{
  display: flex;
  flex-direction: column;
  width:200rpx;
  margin-right:20rpx;
}

.recommendContainer .recommendScroll .scrollItem image{
  width:200rpx;
  height:200rpx;
  border-radius: 15rpx;
}

.recommendContainer .recommendScroll .scrollItem text{
  /*单行文本溢出隐藏 
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis; */

  overflow:hidden;
  text-overflow: ellipsis;
  /* height:70rpx; */
  display:-webkit-box;
  /* 设置几行开始溢出隐藏 */
  -webkit-line-clamp:2;
  /* 设置文本的排列方向 */
  -webkit-box-orient:vertical;
}

.topContainer{
  padding:0 20rpx;
}

.topContainer .topSwiper{
  height:624rpx;
}

.topContainer .topSwiper .topItem{
background: #fbfbfb;
width:96%;
border-radius:10rpx;
}

.topContainer .topSwiper .topItem .topTitle{
  font-size:26rpx;
  padding-bottom: 20rpx;
}

.topContainer .topSwiper .topItem .topContent{
  display:flex;
  align-items: center;
  height:100rpx;
  margin:20rpx 0;
}

.topContainer .topSwiper .topItem .topContent .topImg{
  width:100rpx;
  height:100rpx;
  border-radius: 10rpx;
  flex-shrink: 0;
}

.topContainer .topSwiper .topItem .topContent .topNum{
  width:100rpx;
  height:100rpx;
  text-align: center;
  line-height: 100rpx;
  flex-shrink: 0;
}

.topContainer .topSwiper .topItem .topContent .topName{
  overflow:hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
